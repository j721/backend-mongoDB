{{!-- viewTitle coming from userController.js in first route made --}}
<h3>{{viewTitle}}</h3>

<form action='/user' method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{user._id}}">

    <div class="form-group">
        <label>Full name</label>
        <input type="text" class="form-control" name="fullName" placeholder="Full Name" value="{{user.fullName}}">
    </div>

    <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" name="email" placeholder="Email" value="{{user.email}}">
    </div>


    <div class="form-row">
        <div class="form-group col -md -6">

            <label>Mobile</label>
            <input type="text" class="form-control" name="mobile" placeholder="Mobile" value="{{user.mobile}}">
        </div>

        <div class="form-group col -md -6">
            <label>City</label>
            <input type="text" class="form-control" name="city" placeholder="City" value="{{user.mobile}}">
        </div>
    </div>

    <div class="form-group">
        <button type="submit" class=" btn btn-info">Submit</button>
        <a class="btn btn-secondary" href='/user/list'>View All</a>
    </div>

</form>